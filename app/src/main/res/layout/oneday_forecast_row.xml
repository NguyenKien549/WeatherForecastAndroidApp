<?xml version="1.0" encoding="utf-8"?>
<!--giao diện cho một ngày-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        //icon
        <ImageView
            android:id="@+id/first_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:src="@drawable/ic_day" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="5"
            android:orientation="vertical">

            //thứ ngày tháng năm
            <TextView
                android:id="@+id/firstday_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="thứ tư, 24 tháng 4"
                android:textAllCaps="true"
                android:textColor="@color/black" />

            //Nhiệt độ min max
            <TextView
                android:id="@+id/min_maxTemp_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="38* / 28*"
                android:textColor="@color/colorDes" />

            //Mô tả các thông tin thêm
            <TextView
                android:id="@+id/description_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Trời trong" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>