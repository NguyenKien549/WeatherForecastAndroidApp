<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/first_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ball_yellow"
            android:layout_gravity="center"
            android:layout_margin="2dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginLeft="2dp">

            <TextView android:id="@+id/firstday_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="thứ tư, 24 tháng 4"
                android:textAllCaps="true"/>

            <TextView android:id="@+id/min_maxTemp_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="38* / 28*"/>

            <TextView android:id="@+id/description_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trời trong"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>